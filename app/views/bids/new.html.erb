<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>New bid</h1>
      <%= simple_form_for [@auction, @bid] do |f| %>
        <%= f.input :price %>
        <%= f.input :perks %>
        <%= f.input :photo, as: :file %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>