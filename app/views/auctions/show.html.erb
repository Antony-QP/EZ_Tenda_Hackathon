<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="auction-details">
        <h1>Single auction</h1>
        <p><%= @auction.category.capitalize %> auction</p>
        <p>Starting price: <%= @auction.start_price %> </p>
        <p>Available for: <%= @auction.contract_length %> </p>
      </div>
      <div class="auction-bids">
        <h2>All bids for the auction</h2>
        <div class="card">
          <% @bids.each do |bid| %>
          <% if bid.photo.attached? %>
            <%= cl_image_tag @bid.photo, height: 300, width: 400, crop: :fill %>
          <% end %>
            <p>Brand: <%= bid.user.name %></p>
            <p>Price: <%= bid.price %> Â£</p>
            <p>Perks: <%= bid.perks %></p>
          <% end %>
        </div>
        <%= link_to "Bid now", new_auction_bid_path(@auction) %>
      </div>
    </div>
  </div>
</div>

