<div class="container">
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
          <% if current_user.role == "Brand" %>
          <a
            class="nav-item-2 nav-link"
            id="nav-home-tab"
            data-toggle="tab"
            href="#nav-home"
            role="tab"
            aria-controls="nav-home"
            aria-selected="true"
            >Your Live Bids</a
          >
          <% end %>
          <% if current_user.role == "Manager" %>
          <a
            class="nav-item-2 nav-link"
            id="nav-profile-tab"
            data-toggle="tab"
            href="#nav-profile"
            role="tab"
            aria-controls="nav-profile"
            aria-selected="false"
            >Your Live Auctions</a
          >
          <% end %>
          <a class="nav-item-2 nav-link active" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Accepted Bids</a>
        </div>
      </nav>
</div>


<div class="tab-content" id="nav-tabContent">
  <div
    class="tab-pane fade show"
    id="nav-home"
    role="tabpanel"
    aria-labelledby="nav-home-tab"
  >
    <div class="container">
        <% @bids.each do |bid| %> <% if bid.user_id == current_user.id%>
        <div class="col-12 card flex-row align-items-center my-1">
            <div class="p-2">
                <% if bid.photo.attached? %>
                  <div class="bid-card-img" style="background-image: url('<%= cl_image_path (bid.photo.key), crop: :fill %>');"></div>
                <% end %>
              </div>
              <div class="d-flex flex-column w-100">
                <div class="border-bottom d-flex flex-row w-100 justify-content-between pt-2">
                  <h4><%= bid.user.name %></h4>
                    <%= link_to edit_bid_path(bid) do %>
                      <i class="fas fa-pencil-alt"></i>
                    <% end %>
                </div>
                <div class="d-flex flex-row w-100 justify-content-between pt-4">
                  <p>Perks: <%= bid.perks %></p>
                  <h5><strong><%= bid.price %> £</strong></h5>
                </div>
              </div>
        </div>
        <% end %> <% end %>
    </div>
  </div>
</div>

<% if current_user.role == "Manager"  %>
<div
  class="tab-pane fade"
  id="nav-profile"
  role="tabpanel"
  aria-labelledby="nav-profile-tab"
>
  <div class="container">
    <% @auctions.each do |auction| %> <% if auction.user_id == current_user.id%>
    <div class="card col-6 my-2 w-100">
      <div
        class="border-bottom w-100 my-2 pt-2 d-flex justify-content-between align-items-center"
      >
        <div class="d-flex align-items-center">
          <div
            class="avatar-img-auction"
            style="
              background-image: url('<%= cl_image_path (auction.user.photo.key), crop: :fill %>');
              width: 40px;
              height: 40px;
              border-radius: 50px;
            "
          ></div>
          <span><%= auction.user.name %></span>
        </div>
        <div>
          <%= link_to edit_auction_path(auction) do %>
          <i class="fas fa-pencil-alt pr-1"></i>
          <% end %> <%= link_to auction_path(auction), method: :delete, data:
          {confirm: "Are you sure?"} do %>
          <i class="fas fa-trash"></i>
          <% end %>
        </div>
      </div>
      <div class="p-2">
        <h6><%= auction.add_space(auction.category).capitalize %> Auction</h6>
        <div>Price: £<%= auction.start_price %></div>
        <div class="">Volume: <%= auction.estimated_volume %></div>
        <div>Contract: <%= auction.contract_length %></div>
      </div>
      <div class="ml-auto pb-2">
        <%= link_to 'Go to auction', auction_path(auction), class: "btn
        venue-button" %>
      </div>
    </div>
    <% end %> <% end %>
  </div>
</div>
<% end %>


<div class="tab-pane fade active" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">
    <div class="container">
        <% @bids.each do |bid| %> 
        <% if bid.user_id == current_user.id && bid.approved == true %>
        <div class="col-12 card flex-row align-items-center my-1">
            <div class="p-2">
                <% if bid.photo.attached? %>
                  <div class="bid-card-img" style="background-image: url('<%= cl_image_path (bid.photo.key), crop: :fill %>');"></div>
                <% end %>
              </div>
              <div class="d-flex flex-column w-100">
                <div class="border-bottom d-flex flex-row w-100 justify-content-between pt-2">
                  <h4><%= bid.user.name %></h4>
                    <%= link_to edit_bid_path(bid) do %>
                      <i class="fas fa-pencil-alt"></i>
                    <% end %>
                </div>
                <div class="d-flex flex-row w-100 justify-content-between pt-4">
                  <p>Perks: <%= bid.perks %></p>
                  <h5><strong><%= bid.price %> £</strong></h5>
                </div>
              </div>
        </div>
        <% end %> <% end %>
    </div>
</div>


